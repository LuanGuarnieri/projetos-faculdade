package principal;

public class ListaEstatica 
{
	private int[] info;
	private int tamanho;
	
	public ListaEstatica() 
	{
		info = new int[10];
		tamanho = 0;
	}	
	
	// arrayList.size() -> equivalente
	public int getTamanho() {
		return tamanho;
	}

	public void setTamanho(int tamanho) {
		this.tamanho = tamanho;
	}

	public int[] getInfo() {
		return info;
	}

	public void setInfo(int[] info) {
		this.info = info;
	}

	private void redimensionar()
	{
		// declara novo vetor
		int[] novo;
		// declara o novo tamanho
		int novoTamanho = info.length + 10;
		
		// determina o tamanho do novo vetor
		novo = new int[novoTamanho];
		
		// processo de cópia de um vetor para outro
		for (int i = 0; i < tamanho; i++) 
		{
			novo[i] = info[i];
		}
		
		info = novo;
	}
	
	public void inserir(int valor)
	{
		if (tamanho == info.length)
		{
			this.redimensionar();
		}
		
		this.info[tamanho] = valor;
		tamanho++;
	}
	
	public String exibir()
	{
		String retorno = "[";
		for (int i = 0; i < tamanho; i++)
		{
			retorno += info[i] + ", ";
		}
		return retorno + "]";
	}
	
	public int buscar(int valor)
	{
		// percorrer somente as posições usadas
		for (int posicao = 0; posicao < tamanho; posicao++)
		{
			if (info[posicao] == valor)
			{
				return posicao;
			}
		}
		return -1;
	}
	
	public void retirar(int valor)
	{
		// arrumar
		// cria array temporário com o tamanho do array original - 1 (para deletar)
		int[] arrayTemp = new int[info.length - 1];
		
		if (buscar(valor) != 1)
		{
			for (int i = 0; i < tamanho; i++)
			{
				if (info[i] == valor)
				{
					continue;		
				}
				arrayTemp[i] = info[i];
			}
		}
		tamanho--;
		info = arrayTemp;
	}
	
	public boolean estaVazia()
	{
		// para estar vazio, o array deve ter tamanho 0
		return (tamanho == 0);
	}
	
	public void concatenar(ListaEstatica outra)
	{	
		for (int i = 0; i < outra.getTamanho(); i++)
		{
			// quebra encapsulamento. ninguém pode garantir que o objeto "outra" seja realmente igual a classe ListaEstatica
			// pode ser que esse objeto não tenha um objeto chamado "info" (ja da erro)
			inserir(outra.info[i]);
		}
	}
	
	public ListaEstatica dividir()
	{
		int metade = this.getTamanho()/2;

		ListaEstatica listaRetornada = new ListaEstatica();
		
		for (int i = metade; i < this.getTamanho(); i++)
		{
			listaRetornada.inserir(this.info[i]);
		}
		tamanho = metade;
		return listaRetornada;
	} 
	
	public ListaEstatica copiar()
	{
		ListaEstatica listaCopiada = new ListaEstatica();
		
		for (int i = 0; i < info.length; i++)
		{
			listaCopiada.inserir(this.info[i]);
		}
		
		return listaCopiada;
	}
	
}
